{
  "name": "year-progress",
  "version": "1.0.0",
  "description": "Year Progress",
  "main": "index.html",
  "scripts": {
    "init": "npm ci",
    "clean": "rimraf --glob sw/sw.js && rimraf --glob sw/workbox*.js && rimraf --glob sw/*.map && rimraf --glob public/icons/*.* && rimraf --glob public/*",
    "copy-static": "copyfiles -u 1 ./sw/**/* ./public/sw/ && copyfiles -u 1 ./assets/**/* ./public/ && copyfiles ./manifest.webmanifest ./public/",
    "build-html": "html-minifier --collapse-whitespace --remove-comments --use-short-doctype --minify-css --minify-js --input-dir ./ --output-dir public --file-ext html",
    "sw-build": "workbox generateSW",
    "build": "npm run clean && npm run build-html && npm run sw-build && npm run copy-static"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jenishngl/year-progress.git"
  },
  "keywords": [
    "year",
    "progress"
  ],
  "author": "Jenish Jerome",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jenishngl/year-progress/issues"
  },
  "homepage": "https://github.com/jenishngl/year-progress#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "html-minifier": "^4.0.0",
    "rimraf": "^5.0.1",
    "workbox-cli": "^7.0.0"
  }
}
